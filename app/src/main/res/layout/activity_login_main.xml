<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    tools:context=".Activity.LoginMainActivity"
    android:scaleType="centerCrop">


    <ImageButton
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:id="@+id/image_facebook_btn"
        android:background="@drawable/img_facebook_btn"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/image_email_btn"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:visibility="gone"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:id="@+id/image_email_btn"
        android:background="@drawable/img_email_btn"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/image_signup_btn"/>

    <ImageButton
        android:layout_width="216dp"
        android:layout_height="28dp"
        android:id="@+id/image_signup_btn"
        android:background="@drawable/img_signup"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
